= @category.name
= render 'admin/playlists/new'
- if @category.playlists.count.zero?
  = 'Aucune playlists'
- @category.playlists.order(:created_at).each do |playlist|
  = link_to playlist.name, admin_playlist_path(playlist.id)
  %br
  = link_to 'X', admin_playlist_path(playlist.id), method: :delete
  %br
