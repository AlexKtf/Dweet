#home-view
  #loader{ data: { 'ng-if' => 'loading' } }
    %img{ data: { 'ng-src' => "#{asset_path('loading.gif')}" } }
  .empty-col.col-md-1.col-xs-12
  #videos-list.col-md-4.col-xs-12
    .items.panel.panel-default.animate-opacity{ data: { 'ng-if' => '!loading' } }
      .panel-heading
        Last Videos & Playlists
      .panel-body
        .col-md-12.repeated-item{ data: { 'ng-repeat' => 'video in videos' } }
          .col-md-4.col-xs-12
            %a{ data: { 'ng-href' => 'categories/{{video.main_category_slug}}/{{video.slug}}' } }
              %img{ data: { 'ng-src' => '{{video.image_preview_url}}' } }
          .col-md-8.col-xs-12.repeated-body
            %a{ data: { 'ng-href' => 'categories/{{video.main_category_slug}}/{{video.slug}}' } }
              %h4
                {{video.title}}
              %span.repeated-category
                {{video.main_category_name}} - {{video.category_name}}
  .col-md-6.col-xs-12.animate-opacity{ data: { 'ng-if' => '!loading' } }
    .panel.panel-default
      .panel-heading
        Top Videos
      .panel-body

    .panel.panel-default
      .panel-heading
        Top Playlists
      .panel-body

    #logo-bottom
      Mek we Dweet Tv
